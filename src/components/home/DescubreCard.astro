---
interface Props {
  title: string;
  description: string;
  image: string;
  color:  "pinkish" | "greenish" | "purpleish";
}

const { title, description, image, color } = Astro.props;

// Objeto de mapeo para las clases
const colorClasses = {
  pinkish: "hover:bg-pinkish/50 bg-white",
  greenish: "hover:bg-greenish/50 bg-white",
  purpleish: "hover:bg-purpleish/50 bg-white",
};

const buttonColorClasses = {
  pinkish: "bg-pinkish/50",
  greenish: "bg-greenish/50",
  purpleish: "bg-purpleish/50",
};
---

<div class={`shadow-lg overflow-hidden transition duration-300 group ${colorClasses[color]}`}>
  <div class="transition-colors duration-300">
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover top-images group-hover:scale-105 transition duration-300"
    />
  </div>
  <div class="p-6 transition-colors duration-300">
    <h3 class={`text-2xl font-custom2 font-bold mb-3 text-${color}`}>
      {title}
    </h3>
    <p class="text-gray-600 mb-6 text-sm group-hover:text-black transition-colors duration-300">
      {description}
    </p>
    <button
      class={`border px-6 py-2 font-medium hover:opacity-90 transition duration-300 group-hover:bg-white ${buttonColorClasses[color]}`}>
      SABER M√ÅS
    </button>
  </div>
</div>

<style>
  .top-images {
    border-radius: 0 0 100% 80% / 0 0 50% 10%;
  }
</style>

---
import logo3 from "@/assets/Logo1.svg";
import logo from "public/favicon.svg";
import ComponentWrapper from "../ComponentWrapper.astro";

interface ServiceSection {
  title: string;
  items: string[];
}

const serviceSections: ServiceSection[] = [
  {
    title: "Nuestros residentes cuentan con:",
    items: [
      "Atención de enfermería 24hrs",
      "Visita médica diaria",
      "Seguimiento personal por Psicología",
      "Menú personal por Nutriología",
      "Alimentación diaria",
      "Terapia Ocupacional",
      "Acceso a jardín interior y exterior",
    ],
  },
  {
    title: "Los familiares de nuestros residentes cuentan con:",
    items: [
      "Horario de visita flexible",
      "Posibilidad de pernocta de 1-2 personas",
      "Seguimiento familiar por Psicología",
      "Acceso a cafetería con servicio a la habitación",
      "Acceso a talleres y conferencias informativas",
      "Acceso a Auditorio para eventos familiares",
      "Acceso a jardín interior y exterior",
    ],
  },
];
---

<ComponentWrapper className="max-w-6xl mx-auto space-y-12">
  <h2 class="text-6xl font-custom2 text-center text-gray-800">
    Nosotros podemos<br />ayudarles.
  </h2>

  <div class="flex flex-col md:flex-row justify-between gap-12">
    {
      serviceSections.map((section, index) => (
        <>
          {index === 1 && <img src={logo3.src} alt="logo3" class="size-56" />}
          <div class="flex-1 space-y-6 text-center justify-center">
            <h3 class="text-xl font-medium text-gray-800">{section.title}</h3>
            <ul class="space-y-3 text-gray-600">
              {section.items.map((item) => (
                <li class="flex items-center gap-2 justify-center">
                  <img src={logo.src} alt="" class="size-4" /> {item}
                </li>
              ))}
            </ul>
          </div>
        </>
      ))
    }
  </div>
</ComponentWrapper>

<style>
  /* Puedes agregar estilos adicionales específicos aquí si los necesitas */
</style>

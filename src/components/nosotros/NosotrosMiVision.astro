---
import { getCollection } from 'astro:content';
import cerdo from "../../assets/cerdo.webp";

const sections = await getCollection('sections');

---

<section class="w-full py-20">
  <div class="grid grid-cols-1 md:grid-cols-2 max-w-7xl mx-auto px-4">
    {sections.map((section: any) => (
      <>
        {section.data.imagePosition === "left" && (
          <div class="overflow-hidden">
            <img
              src={cerdo.src}
              alt=""
              class="w-full aspect-square object-cover shadow-lg hover:scale-105 transition-transform duration-300"
            />
          </div>
        )}
        <div class="flex flex-col justify-center space-y-6 p-6">
          <h2 class="text-4xl font-custom2 text-gray-900 uppercase tracking-wider md:px-10">
            {section.data.title}
          </h2>
          <p class="text-gray-600 leading-relaxed text-md font-light md:px-10">
            {section.body}
          </p>
        </div>
        {section.data.imagePosition === "right" && (
          <div class="overflow-hidden">
            <img
              src={cerdo.src}
              alt=""
              class="w-full aspect-square object-cover shadow-lg hover:scale-105 transition-transform duration-300"
            />
          </div>
        )}
      </>
    ))}
  </div>
</section>

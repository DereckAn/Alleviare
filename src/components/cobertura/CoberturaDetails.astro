---
// MedicalConsultation.astro
import cerdo from "@/assets/cerdo.webp";
---

<div class="container mx-auto max-w-9xl px-8 py-12 grid grid-cols-1 md:grid-cols-3  gap-8 md:gap-20 md:my-20">
  <!-- Imagen izquierda -->
  <div class="w-full md:-translate-y-20">
    <img src={cerdo.src} alt="Persona sonriente" class="w-full h-[400px] object-cover" />
  </div>

  <!-- Contenido central -->
  <div class="flex flex-col justify-center items-center text-center px-8">
    <h1 class="font-custom2 text-4xl mb-6 leading-tight">
      PREGUNTE POR LA MEJOR OPCIÓN PARA USTEDES
    </h1>
    <p class="text-lg text-gray-600 mb-8 leading-relaxed">
      Recibe una propuesta basada en la valoración médica previa, con atractivas opciones de pago.
    </p>
    <a
      href="#"
      class="text-pinkish inline-block px-8 py-3 border border-pinkish uppercase tracking-wider text-sm transition-colors duration-300 hover:bg-pinkish/80 hover:text-white">
      Contáctenos
    </a>
  </div>

  <!-- Imagen derecha -->
  <div class="w-full md:translate-y-20">
    <img src={cerdo.src} alt="Edificio moderno" class="w-full h-[400px] object-cover " />
  </div>
</div>  
